<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:background="@android:color/white"
        android:src="@drawable/imgres"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingLeft="20dp"
        android:paddingTop="50dp"/>
    <TextView
        android:id="@+id/top"
        android:text="Goodyear Auto Service Center"
        android:textStyle="bold"
        android:textSize="36sp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        />

    <TextView
        android:id="@+id/bottom"
        android:fontFamily="sans-serif-light"
        android:text="10931 N De Anza Blvd, Cupertino, CA 95014"
        android:textSize="20sp"
        android:paddingTop="10dp"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top"
        android:paddingLeft="20dp"/>
    <TextView
        android:id="@+id/bottom2"
        android:fontFamily="sans-serif-light"
        android:text="(408) 255-2166"
        android:paddingTop="10dp"
        android:textStyle="italic"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bottom"
        android:paddingLeft="20dp"/>


    <TextView
        android:id="@+id/bottom3"
        android:fontFamily="sans-serif-medium"
        android:text="The Goodyear Tire and Rubber Company is an American multinational tire manufacturing company founded in 1898 by Frank Seiberling and based in Akron, Ohio."
        android:paddingTop="20dp"
        android:textStyle="italic"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp"/>

</RelativeLayout>

